@page "/pages/{*pathInfo}"
@model docs.unilake.Page
@inject MarkdownPages Markdown

@implements IRenderStatic<docs.unilake.Page>
@functions {
    public List<Page> GetStaticProps(RenderContext ctx)
    {
        var markdown = ctx.Resolve<MarkdownPages>();
        var pages = markdown.GetVisiblePages();
        return pages
            .Where(page => page.Path != "_pages/index.md")
            .Map(page => new Page { PathInfo = page.Slug! });
    }
}

@await Html.PartialAsync("DocsPage", new Shared.DocsPage {
   Brand = "ServiceStack Documentation",
   Slug = Model.Slug,
   Folder = Model.Folder,
}.Init(this, Markdown))
